<div class="container">
  <h1>
    Encuentra tu guarderia</h1>
  <br>
  <div class="row">
    <div class="col-sm-3">
      <div class="card-register-small mx-auto">
        <div class="card-body">
          <h4 class="card-title">Dirección</h4>
          <form id="geocode">
            <input class="form-control" id="address" type="text" name="address" value='<%= address %>'>
          </br>
          <button type="submit" class="btn btn-block btn-outline-primary">Buscar</button>
          </form>
        </br>
          <h5 class="card-title">Filtros</h5>
          <form id="filter">
            <div class="form-check-radio">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="garden" id="garden-checkbox"> Jardín
                <!-- <span class="form-check-sign"></span> -->
              </label>
            </div>
            <div class="form-check-radio">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="swimming_pool" id="swimming_pool-checkbox"> Piscina
                <!-- <span class="form-check-sign"></span> type= radio -->
              </label>
            </div>
            <button type="submit" class="btn btn-block btn-primary btn-link">Aplicar filtros</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="row justify-content-end">
        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
          <div class="btn-group mr-2" role="group" aria-label="First group">
            <button type="button" class="btn btn-primary btn-sm" id="charge-map" href="">Ver mapa</button>
          </div>
          <div class="btn-group mr-2" role="group" aria-label="Second group">
            <button type="button" class="btn btn-primary btn-sm" id="charge-list">Ver listado</button>
          </div>
        </div>
      </div>
      </br>
      <div id="map" class="map"></div>
      <br>
      <div class="card-deck" id="guarderias-list">
        <div class="card">
          <div class="card-body">
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyASqvdUmBMrb4nRgdJfkT7WlhOGA1VKTOw"></script>
  <script type="text/javascript" src="/javascripts/map-guarderias.js"></script>
  <script type="text/javascript" src="/javascripts/list-guarderias.js"></script>
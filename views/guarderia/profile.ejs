</div>

<h3 id='facilities'>Facilities iconos:</h3>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <%guarderia.otherpics.forEach(function(path, index, array){ %>
    <%if(index === 0) { %>
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <% } else { %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%=index%>"></li>
    <% }}) %>
  </ol>
  <div class="carousel-inner">
    <%guarderia.otherpics.forEach(function(path, index, array){ %>
      <%if(index === 0) { %>
      <div class="carousel-item active">
      <img class="d-block w-100" src="<%=path%>">
    </div>
    <% } else { %>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%=path%>">
    </div>
    <% }}) %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="container-fluid">
  <div id="map-profile" class="map-profile"></div>
  <h2> Comentarios acerca de
    <%=guarderia.username%>
  </h2>
  <div id="container">
    <% if (opinions.length > 0) { %>
      <% opinions.forEach(function(opinion) { %>
        <div>
          <strong>
            <%= opinion.user_name %> dice:
          </strong>
          <br>
          <p><%= opinion.comment %>
          </p> 
          <p>Puntuación: <%= opinion.star_ranking %> estrellas.
          </p>
          <p class="date">Comentado el 
            <%= moment(opinion.created_at).format("LL, LTS") %>
          </p>
        </div>
        <% }) %>
          <% } else { %>
            <div>
              <p>@
                <%= guarderia.username %> no tiene comentarios aún.</p>
            </div>
            <% } %>
  </div>
  <div id="container">
    <form action="/guarderias/profile/<%=guarderia.username%>" method="POST" id="new-opinion">
      <label for="commentText">Nuevo comentario:</label>
      <input type="text" name="commentBody" placeholder="Escribe aquí tu opinión">
      <input type="number" name="starsRanking" placeholder="De 1 a 5">
      <button class="button blue fright">Comentar</button>
    </form>
    <br>
    <% if ( typeof(error) != "undefined") { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
      <% } %>
        <br>
  </div>

  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyASqvdUmBMrb4nRgdJfkT7WlhOGA1VKTOw"></script>
  <script type="text/javascript" src="/javascripts/map-profile-guarderia.js"></script>
<div class="wrapper">
  <div class="page-header page-header-profile page-header-xs" data-parallax="true">
    <div class="filter"></div>
  </div>
  <div class="section profile-content">
    <div class="container">
      <div class="owner">
        <div class="avatar">
          <img src="<%=user.profilepic_path%>" alt="Circle Image" class="img-circle img-no-padding img-responsive">
        </div>
        <div class="name">
          <h4 class="title">Hola,
            <%=user.username%>
              <br />
          </h4>
          <h6 class="description">
            <%=user.children%> hijo/s.</h6>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 ml-auto mr-auto text-center">
            <h5>Sobre <%=user.username%>:</h5>
            <p><%=user.description%></p>
            <br />
          <a href="/users/edit" class="btn btn-outline-default btn-round">Editar perfil</a>
        </div>
      </div>
    </div>
  </div>
</div>
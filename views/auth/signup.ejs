            <div class="form-group">
              <label for="username">Username</label>
              <input class="form-control" id="guarderia-username" type="text" name="username" placeholder="Super mami">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input class="form-control" id="guarderia-password" type="password" name="password" placeholder="Your password">
            </div>
            <% if (typeof message !== "undefined") { %>
              <%= message %>
                <% } %>
                  <button type="submit" class="btn btn-register btn-primary btn-block">Crear cuenta</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
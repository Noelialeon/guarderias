<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container">
  <div class="form-row align-items-center mx-auto" style="width: 800px;">
      <div class="col-auto">
        <label for="username">Username</label>
        <input class="fsr-only" id="username" type="text" name="username" placeholder="Enter username">
      </div>
      <div class="col-auto">
        <label for="password">Password</label>
        <input class="fsr-only" id="password" type="password" name="password" placeholder="Your password">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary" href="/signup">Create account</button>
      </div>
      <% if (typeof message !== "undefined") { %>
        <div class="error-message"><%= message %></div>
      <% } %>
  </div>
</form>